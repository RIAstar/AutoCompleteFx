        xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        [HostComponent("net.riastar.demo.view.SelectionPropertyDisplay")]
    </fx:Metadata>

    <s:Form top="-18">
        <s:FormHeading label="Properties"/>

        <s:FormItem label="selectedIndex">
            <s:Label text="{hostComponent.list.selectedIndex}"/>
        </s:FormItem>
        <s:FormItem label="selectedIndices">
            <s:Label text="{hostComponent.list.selectedIndices}"/>
        </s:FormItem>
        <s:FormItem label="selectedItem">
            <s:Label text="{hostComponent.list.selectedItem}"/>
        </s:FormItem>
        <s:FormItem label="selectedItems">
            <s:Label text="{hostComponent.list.selectedItems}"/>
        </s:FormItem>
    </s:Form>

</s:Skin>
