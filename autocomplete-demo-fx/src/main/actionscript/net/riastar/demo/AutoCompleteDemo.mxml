<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:demo="net.riastar.demo.*"
               minWidth="955" minHeight="600">

    <fx:Style source="defaults.css" />
	
    <s:states>
        <s:State name="default" />
        <s:State name="singleSelect" />
    </s:states>
	
	<s:layout>
		<s:HorizontalLayout />
	</s:layout>

    <s:List id="demoList" height="100%" requireSelection="true"
            change="currentState = states[demoList.selectedIndex].name">

        <s:ArrayList>
            <fx:String>Default (multi-select)</fx:String>
            <fx:String>Single select</fx:String>
        </s:ArrayList>
    </s:List>

    <demo:DefaultDemo includeIn="default" width="100%" height="100%" />
    <demo:SingleSelectDemo includeIn="singleSelect" width="100%" height="100%" />

</s:Application>
